# Fun√ß√£o para abrir as listas

def abrir_listas():
    nome_lista = filedialog.askopenfilename(
        initialdir='C;/Users/Mdiniz/PycharmProjects/MeusProjetos',
        title='Abrir lista 1',
        filetypes=(('Dat files', '*.dat'), ('All files', '*.*')),
    )

    nome_lista2 = filedialog.askopenfilename(
        initialdir='C;/Users/Mdiniz/PycharmProjects/MeusProjetos',
        title='Abrir lista 2',
        filetypes=(('Dat files', '*.dat'), ('All files', '*.*')),
    )

    if nome_lista:
        # limpar lista antes de abrir outra
        lista.delete(0, END)
        lista2.delete(0, END)

        # abrir lista
        requisitando_lista = open(nome_lista, 'rb')
        requisitando_lista2 = open(nome_lista2, 'rb')

        # carregar arquivos textos
        steff = pickle.load(requisitando_lista)
        stuff = pickle.load(requisitando_lista2)

        # mostrar os textos na lista
        for item in steff:
            lista.insert(END, item)
        for item in stuff:
            lista2.insert(END, item)


# Fun√ß√£o para limpar a lista 1

def limpar_lista():
    if tkinter.messagebox.askokcancel(message='Tem certeza que deseja apagar a lista 1?', title='Confirma√ß√£o', icon='question', detail='Essa a√ß√£o n√£o pode ser desfeita!'):
        lista.delete(0, END)
    else:
        pass


# Fun√ß√£o para limpar a lista 2

def limpar_lista2():
    if tkinter.messagebox.askokcancel(message='Tem certeza que deseja apagar a lista 2?', title='Confirma√ß√£o', icon='question', detail='Essa a√ß√£o n√£o pode ser desfeita!'):
        lista2.delete(0, END)
    else:
        pass



# Fun√ß√£o para limpar as listas

def limpar_listas():
    if tkinter.messagebox.askokcancel(message='Tem certeza que deseja apagar as listas 1 e 2?', title='Confirma√ß√£o', icon='question', detail='Essa a√ß√£o n√£o pode ser desfeita!'):
        lista.delete(0, END)
        lista2.delete(0, END)
    else:
        pass




