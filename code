#Criando o frame2 - modo claro e escuro
frames2 = Frame(root)
frames2.pack(pady=10)



#Criando a tela da lista
lista = Listbox(frames,
                font=texto_fonte,
                width=30,
                height=3,
                #bg='SystemButtonFace',
                bg='#DDECEA',
                bd=0,
                fg='#464646',
